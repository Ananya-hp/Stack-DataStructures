history = []          
forward_stack = []   

def visit_page(page):
    history.append(page)       
    forward_stack.clear()       
    print(f"Visited: {page}")


def go_back():
    if not history:
        print("No pages in history.")
        return
    last_page = history.pop()
    forward_stack.append(last_page)   
    if history:
        print(f"Going back... Current page: {history[-1]}")
    else:
        print(f"Going back from: {last_page}, no pages left in history.")


def go_forward():
    if not forward_stack:
        print("No forward pages available.")
        return
    page = forward_stack.pop()
    history.append(page)
    print(f"Forward to: {page}")


def show_history():
    if not history:
        print("History is empty.")
    else:
        print("History:", " -> ".join(history))
    if forward_stack:
        print("Forward stack:", " -> ".join(forward_stack))


def count_pages():
    total = len(history)
    print(f"Total pages visited in history: {total}")



while True:
    print("\n1. Visit Page")
    print("2. Back")
    print("3. Forward")
    print("4. Show History")
    print("5. Count Pages")
    print("6. Exit")

    choice = input("Enter choice: ")

    if choice == "1":
        page = input("Enter page name: ")
        visit_page(page)
    elif choice == "2":
        go_back()
    elif choice == "3":
        go_forward()
    elif choice == "4":
        show_history()
    elif choice == "5":
        count_pages()
    elif choice == "6":
        print("Exiting browser simulation.")
        break
    else:
        print("Invalid choice.")
